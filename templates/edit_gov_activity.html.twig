
{# page to add a new artisan ppm/template/artisan/add.html.twig#}
{% extends 'base.html.twig' %}

{% block content %}

    <div class="wrapper  theme-1-active pimary-color-green">
        <!--Preloader-->
        {#<div class="preloader-it">#}
        {#<div class="la-anim-1"></div>#}
        {#</div>#}
        <!--/Preloader-->
        {% block body %}

            <!-- Right Sidebar Backdrop -->
            <div class="right-sidebar-backdrop"></div>
            <!-- /Right Sidebar Backdrop -->

            <!-- Top Menu Items -->
            {# include the navbar from direcctory inc#}
            {% include 'inc/navbar/nav.html.twig' %}
            <!-- /Top Menu Items -->

            {# sidebar left #}
            {% include 'inc/sideBarLeft/sideBar.html.twig' %}

            <!-- Right Sidebar Menu -->
            {% include 'inc/navbar/sidbar.right.setting.html.twig' %}
            <!-- /Right Sidebar Menu -->

        {% endblock %}

        <!-- Main Content -->
        {% block main %}

            <div class="page-wrapper">
                <div class="container-fluid">
                    <!-- mel7it -->
                    <p style="color: #fafafa;line-height: 0 !important;margin-top: -40px " >Lorem ipsum dolor sit amet, consectetur adipisicing elit. Enim eveniet itaque molestiae temporibus. Ab alias amet ex fugiat harum itaque modi mollitia nemo officiis omnis quam, tenetur veniam voluptate voluptatibus.</p>
                    <!-- /mel7it -->
                    <!-- Title -->
                    <div class="row heading-bg">
                        <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                            <h5 class="txt-dark">Changer le gouvernorat </h5>
                        </div>
                        <!-- Breadcrumb -->
                        <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                            <ol class="breadcrumb">
                                <li><a href="{{ path('home') }}">Dashboard</a></li>
                                <li class="active"><span>Changer le gouvernorat</span></li>
                            </ol>
                        </div>
                        <!-- /Breadcrumb -->
                    </div>
                    <!-- /Title -->
                    <!-- Row -->
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="panel panel-default card-view">
                                <div class="panel-heading">
                                    <div class="pull-left">
                                        <h6 class="panel-title txt-dark">Form</h6>
                                    </div>
                                    <div class="clearfix"></div>
                                </div>
                                <div class="panel-wrapper collapse in">
                                    <div class="panel-body">
                                        <div class="form-wrap">
                                            <div class="row">
                                                {% for message in app.flashes('notice') %}
                                                    <div class="flash-notice ">
                                                        <div class="alert alert-success alert-dismissable">
                                                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                                                            <i class="zmdi zmdi-check pr-15 pull-left"></i><p class="pull-left">{{ message }}</p>
                                                            <div class="clearfix"></div>
                                                        </div>
                                                    </div>
                                                {% endfor %}
                                            </div>
                                                           {{ form_start(form) }}

                                                          <div class="row">
                                                              <div class="col-md-6">
                                                                  <div class="form-group">
                                                                      {{ form_label(form.government) }}
                                                                      {{ form_errors(form.government) }}
                                                                      <div class="input-group">
                                                                          <div class="input-group-addon"><i class="icon-globe"></i></div>
                                                                          {{ form_widget(form.government) }}
                                                                      </div>
                                                                  </div>
                                                                  <div class="form-group">
                                                                      {{ form_label(form.delegation) }}
                                                                      {{ form_errors(form.delegation) }}
                                                                      <div class="input-group">
                                                                          <div class="input-group-addon"><i class="icon-home"></i></div>
                                                                          {{ form_widget(form.delegation) }}
                                                                      </div>
                                                                  </div>
                                                              </div>
                                                              <div class="col-md-6">
                                                                  <div class="form-group">
                                                                      {{ form_label(form.activity) }}
                                                                      {{ form_errors(form.activity) }}
                                                                      <div class="input-group">
                                                                          <div class="input-group-addon"><i class="icon-arrow-left-circle"></i></div>
                                                                          {{ form_widget(form.activity) }}
                                                                      </div>
                                                                  </div>
                                                                  <div class="form-group">
                                                                      {{ form_label(form.trades) }}
                                                                      {{ form_errors(form.trades) }}
                                                                      <div class="input-group">
                                                                          <div class="input-group-addon"><i class="icon-arrow-right-circle"></i></div>
                                                                          {{ form_widget(form.trades) }}
                                                                      </div>
                                                                  </div>

                                                              </div>
                                                          </div>
                                                           <button type="submit" class="btn btn-success"> Valider</button>
                                                           <a href="{{ path('artisan_view', {id : artisan.id}) }}"  class="btn btn-danger"> Retour</a>
                                                           {{ form_end(form) }}

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /Row -->

                </div>
            </div>
        {% endblock %}
    </div>
{% endblock %}



