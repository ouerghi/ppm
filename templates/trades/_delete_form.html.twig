<form method="post" action="{{ path('trades_delete', {'id': trade.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette activité?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ trade.id) }}">
    <button class="btn btn-danger mt-20">Supprimer</button>
</form>