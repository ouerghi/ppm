
{# page to test any template render ppm/template/artisan/test.html.twig#}

{% extends 'base.html.twig' %}
{% block title %}Delegation index{% endblock %}
{% block content %}

    <div class="wrapper  theme-1-active pimary-color-green">
        <!--Preloader-->
        {#<div class="preloader-it">#}
        {#<div class="la-anim-1"></div>#}
        {#</div>#}
        <!--/Preloader-->
        {% block body %}

            <!-- Right Sidebar Backdrop -->
            <div class="right-sidebar-backdrop"></div>
            <!-- /Right Sidebar Backdrop -->

            <!-- Top Menu Items -->
            {# include the navbar from direcctory inc#}
            {% include 'inc/navbar/nav.html.twig' %}
            <!-- /Top Menu Items -->

            {# sidebar left #}
            {% include 'inc/sideBarLeft/sideBar.html.twig' %}

            <!-- Right Sidebar Menu -->
            {% include 'inc/navbar/sidbar.right.setting.html.twig' %}
            <!-- /Right Sidebar Menu -->

        {% endblock %}

        <!-- Main Content -->
        {% block main %}
            <div class="page-wrapper">
                <div class="container-fluid">

                    <!-- mel7it -->
                    <p style="color: #fafafa;line-height: 0 !important;margin-top: -40px " >Lorem ipsum dolor sit amet, consectetur adipisicing elit. Enim eveniet itaque molestiae temporibus. Ab alias amet ex fugiat harum itaque modi mollitia nemo officiis omnis quam, tenetur veniam voluptate voluptatibus.</p>
                    <!-- /mel7it -->
                    {#{{ dump(artisans.content) }}#}
                    <div class="row">
                        <!-- Basic Table -->
                        <div class="col-sm-12">
                            <div class="panel panel-default card-view">
                                <div class="panel-heading">
                                    <div class="pull-left">
                                        <h6 class="panel-title txt-dark">Liste Des Délégations </h6>
                                    </div>
                                    <div class="clearfix"></div>
                                </div>
                                <div>
                                    <a class="btn btn-primary pull-right mt-20" href="{{ path('delegation_new') }}">Nouvelle  Délégation</a>
                                </div>
                                <div class="clearfix"></div>
                                <div class="panel-wrapper collapse in">
                                    <div class="panel-body">
                                        <div class="table-wrap">
                                            <div class="table-responsive">
                                                <table class="table table-striped table-bordered mb-0">
                                                    <thead>
                                                    <tr>
                                                        <th><i class=" fa fa-sort"></i> {{ knp_pagination_sortable(  delegations, 'Id', 'd.id' , {'class': 'sortable'}) }}</th>
                                                        <th><i class=" fa fa-sort"></i> {% if delegations.isSorted('d.Name') %} class="sorted"{% endif %}{{ knp_pagination_sortable(delegations, 'Nom', 'd.name') }}</th>
                                                        <th><i class=" fa fa-sort"></i> {% if delegations.isSorted('d.Code') %} class="sorted"{% endif %}{{ knp_pagination_sortable(delegations, 'Code', 'd.code') }}</th>
                                                        <th>actions</th>
                                                    </tr>
                                                    </thead>
                                                    <tbody>
                                                    {% for delegation in delegations %}
                                                        <tr>
                                                            <td>{{ delegation.id }}</td>
                                                            <td>{{ delegation.name }}</td>
                                                            <td>{{ delegation.code }}</td>
                                                            <td>
                                                                {#<a href="{{ path('trades_show', {'id': trade.id}) }}" class="btn btn-xs btn-danger btn-icon-anim btn-circle" data-toggle="tooltip" data-original-title="Voir"> <i class="fa fa-eye text-inverse m-r-10 text-info"></i> </a>#}
                                                                {#<a  class="btn btn-xs btn-success btn-icon-anim btn-circle" data-toggle="tooltip" data-original-title="Modifier"> <i class="icon-trash"></i> </a>#}
                                                                <a href="{{ path('delegation_edit', {'id': delegation.id}) }}" data-toggle="tooltip" data-original-title="Modifier" class="btn btn-sm btn-success btn-icon-anim btn-square"><i  class="fa fa-pencil"></i></a>
                                                                {{ include('delegation/_delete_form.html.twig') }}
                                                            </td>
                                                        </tr>
                                                    {% else %}
                                                        <tr>
                                                            <td colspan="3">Délégation non trouvé </td>
                                                        </tr>
                                                    {% endfor %}
                                                    </tbody>
                                                </table>
                                                <div class="navigation">
                                                    {{ knp_pagination_render(delegations) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /Basic Table -->
                    </div>

                </div>
            </div>
        {% endblock %}
    </div>
{% endblock %}






